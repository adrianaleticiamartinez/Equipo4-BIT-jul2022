
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <h3 class="text-center mb-4 text-primary">Login</h3>
        <form action="@Url.Action("Index","Acceso")" method="post">
            <!-- Email input -->
            <div class="row mb-4 justify-content-center">
                <div class="col-1">

                </div>
                <div class="col-4 align-content-center m-0" >
                    <label class="form-label" for="textEmail">User</label>
                    <input type="text" id="textEmail" class="form-control" name="usuario" placeholder="User" />
                </div>
            </div>

            <!-- Password input -->
            <div class="row mb-4 justify-content-center">
                <div class="col-1">
                </div>
                <div class="col-4">
                    <label class="form-label" for="textPassword">Password</label>
                    <input type="password" id="textPassword" class="form-control" name="auth" placeholder="Password" />
                </div>
            </div>



            <!-- Submit button -->
            <div class="row justify-content-center">
                <div class="col-1">
                    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                </div>
            </div>
            
        </form>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
